{
  "appId": "com.hal5.invoicemanager",
  "productName": "HAL5 Facturatie Manager",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/**/*"
  ],
  "win": {
    "icon": "build/icon.png",
    "target": "nsis",
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "asar": false,
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "HAL5 Facturatie Manager"
  },
  "publish": {
    "provider": "github",
    "owner": "Yovadi",
    "repo": "FactuurTool",
    "private": false,
    "releaseType": "release",
    "vPrefixedTagName": true
  }
}
