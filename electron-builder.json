{
  "appId": "com.hal5.invoicemanager",
  "productName": "HAL5 Facturatie Manager",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/**/*"
  ],
  "win": {
    "target": "nsis",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publisherName": "HAL5 Overloon"
  },
  "asar": false,
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "HAL5 Facturatie Manager"
  },
  "publish": {
    "provider": "github",
    "owner": "JOUW-GITHUB-USERNAME",
    "repo": "JOUW-REPO-NAAM"
  }
}
