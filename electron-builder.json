{
  "appId": "com.hal5.invoicemanager",
  "productName": "HAL5 Facturatie Manager",
  "directories": {
    "output": "release",
    "buildResources": "public"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/**/*",
    "!node_modules/**/*",
    "node_modules/@supabase/**/*",
    "node_modules/jspdf/**/*",
    "node_modules/html2canvas/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "asar": false,
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "HAL5 Facturatie Manager"
  }
}
