{
  "appId": "com.hal5.invoicemanager",
  "productName": "HAL5 Facturatie Manager",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/**/*"
  ],
  "asarUnpack": [
    "node_modules/@supabase/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "signingHashAlgorithms": ["sha256"],
    "signDlls": false
  },
  "asar": true,
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "HAL5 Facturatie Manager"
  }
}
