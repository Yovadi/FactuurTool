{
  "appId": "com.hal5.invoicemanager",
  "productName": "HAL5 Facturatie Manager",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "sign": null,
    "signingHashAlgorithms": [],
    "verifyUpdateCodeSignature": false
  },
  "asar": false,
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "HAL5 Facturatie Manager",
    "differentialPackage": true
  },
  "publish": {
    "provider": "github",
    "owner": "Yovadi",
    "repo": "FactuurTool",
    "releaseType": "release"
  }
}
